<%- include('./partials/header') %> 

<header>
  <!-- Carousel -->
  <div id="carousel-main" class="carousel slide" 
    data-ride="carousel" data-interval="15000">
    <ol class="carousel-indicators">
      <li data-target="#carousel-main" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-main" data-slide-to="1"></li>
      <li data-target="#carousel-main" data-slide-to="2"></li>
    </ol>
    
    <div class="marquee">
      <div class="marquee-content">
        <!-- Generate Trending Cards -->
      </div>
    </div>
    
    <div class="carousel-inner" role="listbox">
      <!-- Place Generated Gallery to Slides -->
    </div>

    <a class="carousel-control-prev" href="#carousel-main" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel-main" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</header>

<section class="search-results" data-desc=""></section>
<section class="intheaters" data-desc="<%= locale.section_intheaters %>"></section>
<section class="intheaters-pick" data-desc="<%= locale.section_intheaters_pick %>"></section>
<section class="moviespopular" data-desc="<%= locale.section_moviespopular %>"></section>
<section class="moviespopular-pick" data-desc="<%= locale.section_moviespopular_pick %>"></section>
<section class="tvpopular" data-desc="<%= locale.section_tvpopular %>"></section>
<section class="tvpopular-pick" data-desc="<%= locale.section_tvpopular_pick %>"></section>

